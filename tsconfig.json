{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES2017"],
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./*.ts"],
  "exclude": ["node_modules", "dist", "*.spec.ts"]
}

